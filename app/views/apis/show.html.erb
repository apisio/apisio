  <% end %>

  <script>
    setbuttonclick(<%=@api.id.to_s rescue "0"%>);
  </script>
  </div>    
  </center>
      
  
<% end %>

</div>
</div> 

<% else %>
<!-- 404 -->
<div class="hero-unit">
  <h1>API not found...</h1>
