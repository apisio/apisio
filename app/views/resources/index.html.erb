<h1>Listing resources</h1>

<table>
  <tr>
    <th>Api</th>
    <th>Resourcename</th>
    <th>Pathurl</th>
    <th>Resourcemethod</th>
    <th>Authentication</th>
    <th>Curlexample</th>
    <th>Docurl</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.api_id %></td>
    <td><%= resource.resourcename %></td>
    <td><%= resource.pathurl %></td>
    <td><%= resource.resourcemethod %></td>
    <td><%= resource.authentication %></td>
    <td><%= resource.curlexample %></td>
    <td><%= resource.docurl %></td>
    <td><%= resource.description %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

